<h1>My Lists</h1>

<%= link_to 'Create a New List', new_list_path, class: 'btn btn-success mb-3' %>

<% @lists.each do |list| %>
  <div class="list-container mb-3">
    <h2><%= link_to list.name, list_path(list) %></h2>
    <%= link_to 'Edit', edit_list_path(list), class: 'btn btn-primary' %> |
    <%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> |
    <%= link_to 'View Movies', list_path(list), class: 'btn btn-secondary' %> 
  </div>
<% end %>