<h1><%= @list.name %></h1>

<%= link_to 'Edit', edit_list_path(@list), class: 'btn btn-primary' %> |
<%= link_to 'Delete', list_path(@list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> |
<%= link_to 'Back', lists_path, class: 'btn btn-secondary' %>


<% @bookmarks.each do |bookmark| %>
  <div>
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
    <p>Comment: <%= bookmark.comment %></p>
    <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
<div>
<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
</div>
